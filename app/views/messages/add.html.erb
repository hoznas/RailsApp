<h1>Messages#add</h1>
<p><%= @msg %></p>
<% if @message.errors.any? %>
  <ul>
    <% @message.errors.full_messages.each do |err| %>
      <li><%= err %></li>
    <% end %>
  </ul>
<% end %>
<%= form_for(@message, 
      url:{controller:"messages", action:"create"}) do |form| %>
  <div class="form-group">
    <label for="person_id">person ID</label>
    <%= form.text_field :person_id,{class:"form-controll"} %>
  </div>
  <div class="form-group">
    <label for="title">title</label>
    <%= form.text_field :title,{class:"form-controll"} %>
  </div>
  <div class="form-group">
    <label for="message">message</label>
    <%= form.text_area :message,{class:"form-controll"} %>
  </div>
  <%= form.submit "create" %>
<% end %>
