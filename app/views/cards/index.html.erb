<h1 class="display-4 text-primary">Cards#index</h1>
<p> all data </p>
<table class="table">
  <tr>
    <th>ID</th>
    <th>Title</th>
    <th>Author</th>
    <th colspan="2"></th>
  </tr>
  <% @cards.each do |obj| %>
    <tr>
      <td width="35px"><%= obj.id %></td>
      <td width="50%"><a href="/cards/<%= obj.id %>">
        <%= obj.title %></a></td>
      <td width="35px"><%= obj.author %></td>
      <td width="80px">
        <a href="/cards/edit/<%= obj.id %>">edit</a></td>
      <td width="80px">
        <a href="javascript:delData(
          <%= (obj.id.to_s + ",'".to_s + obj.title.to_s).html_safe %>');">
            delete
        </a>
      </td>
    </tr>
  <% end %>
</table>
<p><a href="/cards/add">
  input new card &gt;&gt;
</a></p>

<script>
function delData(id,title){
  if(confirm("delete this card[" + title + "]. ok?")){
    document.location = "/cards/delete/" + id;
  }
}
</script>