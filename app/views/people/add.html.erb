<h1 class="display-4 text-primary">People#add</h1>
<p><%= @msg %></p>

<% if @person.errors.any? %>
  <ul>
    <% @person.errors.full_messages.each do |err| %>
      <li> <%= err %> </li>
    <% end %>
  </ul>
<% end %>

<%= form_for(@person, url:{controller:"people", action:"create"}) do |form| %>
  <div class="form-group">
    <label for="name">Name</label>
    <%= form.text_field :name,  class:"form-controll" %>
  </div>
  <div class="form-group">
    <label for="age">Age</label>
    <%= form.text_field :age,  class:"form-controll" %>
  </div>
  <div class="form-group">
    <label for="mail">Mail</label>
    <%= form.text_field :mail,  class:"form-controll" %>
  </div>

  <%= form.submit class:"btn btn-primary" %>
<% end %>